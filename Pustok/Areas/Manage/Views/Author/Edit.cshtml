@model Author
@{
    ViewData["Title"] = "Edit";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Genres</h1>
        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            Edit
        </a>
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form class="user" asp-action="edit" method="post">
                <div class="form-group">
                    <label for="nameInput">Fullname</label>
                    <input asp-for="Fullname" class="form-control" id="fullnameInput" placeholder="Enter FullName here..">
                    <span class="text-danger" asp-validation-for="Fullname"></span>
                </div>
                <button class="btn btn-primary" type="submit">
                    Edit Author
                </button>
            </form>
        </div>
    </div>
</div>


@section scripts {
    @Html.Partial("_ValidationScriptPartials");
}

